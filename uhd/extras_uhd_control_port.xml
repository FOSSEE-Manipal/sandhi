<block>
    <name>UHD: Control Port</name>
    <key>extras_uhd_control_port</key>
    <category>UHD</category>
    <import>import grextras</import>
    <import>from gnuradio import uhd</import>
    <make>grextras.UHDControlPort($addr)
try: self.adopt_element("$(id)", $(id))
except Exception as ex: print ex</make>
    <param>
        <name>Device Address</name>
        <key>addr</key>
        <value>addr=192.168.10.2</value>
        <type>string</type>
    </param>
</block>
