<?xml version="1.0"?>
<!--
###################################################
##Serialize port
###################################################
-->
<block>
    <name>Ex: Serialize</name>
    <key>extras_serialize_port</key>
    <import>import grextras</import>
    <make>grextras.SerializePort($mtu, $sync)
#for i, s in enumerate($input_sizes())
self.$(id).input_config($i).item_size = $s
#end for</make>
    <param>
        <name>MTU</name>
        <key>mtu</key>
        <value>0</value>
        <type>int</type>
        <option><name>Default</name><key>0</key></option>
    </param>
    <param>
        <name>Sync</name>
        <key>sync</key>
        <value>True</value>
        <type>bool</type>
    </param>
    <param>
        <name>Num Inputs</name>
        <key>num_inputs</key>
        <value>1</value>
        <type>int</type>
    </param>
    <param>
        <name>Input sizes</name>
        <key>input_sizes</key>
        <value>[8]</value>
        <type>int_vector</type>
        <hide>part</hide>
    </param>
    <sink>
        <name>in</name>
        <type></type>
        <nports>$num_inputs</nports>
    </sink>
    <source>
        <name>ser</name>
        <type></type>
    </source>
    <doc>
Set sync parameter to True if all input ports share a synchronous relationship.
    </doc>
</block>
