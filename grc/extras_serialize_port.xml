<?xml version="1.0"?>
<!--
###################################################
##Serialize port
###################################################
-->
<block>
    <name>Ex: Serialize</name>
    <key>extras_serialize_port</key>
    <import>import grextras</import>
    <make>grextras.SerializePort($mtu)</make>
    <param>
        <name>MTU</name>
        <key>mtu</key>
        <value>0</value>
        <type>int</type>
        <hide>#if $mtu() == 0 then 'part' else 'none'#</hide>
        <option><name>Automatic</name><key>0</key></option>
    </param>
    <param>
        <name>Num Inputs</name>
        <key>num_inputs</key>
        <value>1</value>
        <type>int</type>
    </param>
    <sink>
        <name>in</name>
        <type></type>
        <nports>$num_inputs</nports>
    </sink>
    <source>
        <name>ser</name>
        <type></type>
    </source>
</block>
