<?xml version="1.0"?>
<!--
###################################################
## Blob to stream - blob msg input
###################################################
 -->
<block>
    <name>Ex: DGram2Stream</name>
    <key>extras_datagram_to_stream</key>
    <category>Extras</category>
    <import>import gras</import>
    <make>gras.Factory.make('/extras/datagram_to_stream', $item_size)</make>
    <param>
        <name>Output Item Size</name>
        <key>item_size</key>
        <value>1</value>
        <type>int</type>
    </param>
    <sink>
        <name>in</name>
        <type></type>
    </sink>
    <source>
        <name>out</name>
        <type>byte</type>
        <vlen>$item_size</vlen>
    </source>
</block>
