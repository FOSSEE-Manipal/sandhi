<block>
    <name>Ex: TUN/TAP</name>
    <key>extras_tuntap</key>
    <throttle>1</throttle>
    <import>import gras</import>
    <make>gras.Factory.make('/extras/tuntap', $dev)</make>
    <param>
        <name>Device</name>
        <key>dev</key>
        <value></value>
        <type>string</type>
        <option><name>Automatic</name><key></key></option>
    </param>
    <sink>
        <name>in</name>
        <type></type>
        <optional>1</optional>
    </sink>
    <source>
        <name>out</name>
        <type></type>
        <optional>1</optional>
    </source>
</block>
